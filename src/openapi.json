{
  "openapi": "3.0.3",
  "info": { "title": "ZANTARA API", "version": "1.0.0" },
  "paths": {
    "/actions/drive/list-folder": {
      "get": {
        "operationId": "listDriveFolder",
        "summary": "List files in a Drive folder",
        "security": [ { "ApiKeyAuth": [] } ],
        "parameters": [
          { "in": "query", "name": "folderId", "schema": { "type": "string" }, "required": false },
          { "in": "query", "name": "pageSize", "schema": { "type": "integer", "default": 100 }, "required": false },
          { "in": "query", "name": "pageToken", "schema": { "type": "string" }, "required": false }
        ],
        "responses": {
          "200": {
            "description": "List of files",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "folderId": { "type": "string" },
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "name": { "type": "string" },
                          "mimeType": { "type": "string" },
                          "modifiedTime": { "type": "string" },
                          "webViewLink": { "type": "string" },
                          "owner": { "type": "string" }
                        }
                      }
                    },
                    "nextPageToken": { "type": "string", "nullable": true }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/memory/smart-save": {
      "post": {
        "operationId": "smartSaveNote",
        "summary": "Smart save a note in AMBARADAM avoiding duplicates",
        "security": [ { "ApiKeyAuth": [] } ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "content", "owner"],
                "properties": {
                  "title": { "type": "string" },
                  "content": { "type": "string" },
                  "owner": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "action": { "type": "string", "enum": ["created", "updated", "moved+updated"] },
                    "id": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "description": "Bad request (missing fields)" },
          "401": { "description": "Unauthorized (API key missing/invalid)" },
          "500": { "description": "Server error" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-Api-Key"
      }
    }
  }
}
