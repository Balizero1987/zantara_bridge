## Runtime configuration for zantara-bridge (example)
# Copy to `.env` for local dev only. Never commit real secrets.

# Server
PORT=8080
NODE_ENV=production
ENABLE_DIAG=false

# Auth / API keys
ZANTARA_PLUGIN_API_KEY=
API_KEYS=

# Claude / OpenAI / Gemini
CLAUDE_API_KEY=
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
GOOGLE_API_KEY=
GEMINI_API_KEY=

# Google Cloud / Firestore / Drive
GOOGLE_CLOUD_PROJECT=
GOOGLE_CLIENT_EMAIL=
GOOGLE_PRIVATE_KEY=
GOOGLE_SA_JSON_SECRET=
GOOGLE_SERVICE_ACCOUNT_KEY=
GOOGLE_SERVICE_ACCOUNT_KEY_B64=
IMPERSONATE_USER=

# Firestore indexes and memory
PROFILE_STORE=firestore
MEMORY_DRIVE_FOLDER_ID=
DRIVE_FOLDER_ID=
DRIVE_FOLDER_BRIEFS=
DRIVE_FOLDER_AMBARADAM=
DRIVE_OWNER_MAP=
DEFAULT_FOLDER_ROOT=
DEFAULT_FOLDER_LEAF=
CHAT_FOLDER_LEAF=

# GitHub integration
GITHUB_TOKEN=
GITHUB_OWNER=
GITHUB_REPO=

# Email / Gmail
GMAIL_SENDER=

# Chat settings
CHAT_AUDIENCE=public
CHAT_AUTO_SAVE=true
CHAT_AUTO_SAVE_MIN_LENGTH=200
ALLOWED_ISSUERS=
ALLOWED_CLIENT_IDS=
AMBARADAM_MAGIC_WORD=
PLUGIN_CORS_WHITELIST=

# Redis / Queue (optional)
REDIS_URL=

