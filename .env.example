## Zantara Light Bridge - Zero-Cost Production Configuration
# Copy to `.env` for local dev only. Never commit real secrets.
# All production secrets should be configured via Cloud Run environment variables or Secret Manager

# Server Configuration
PORT=8080
NODE_ENV=production
ENABLE_DIAG=false

# Authentication - REQUIRED: Set strong API keys for production
# Use random 32+ character strings, store in Secret Manager for production
ZANTARA_PLUGIN_API_KEY=
API_KEYS=

# AI Service Keys - PRODUCTION: Store in Secret Manager
CLAUDE_API_KEY=
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
GOOGLE_API_KEY=
GEMINI_API_KEY=

# Google Cloud / Firestore / Drive - PRODUCTION: Use service account or workload identity
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_KEY=
GOOGLE_SA=<inserisci qui il JSON del service account>
# PRODUCTION: Use either JSON key or impersonation, never both
IMPERSONATE_USER=zero@balizero.com

# Zero-Cost Drive Configuration - Set your actual folder IDs
PROFILE_STORE=firestore
MEMORY_DRIVE_FOLDER_ID=your-shared-drive-folder-id
DRIVE_FOLDER_ID=your-shared-drive-folder-id
DRIVE_FOLDER_BRIEFS=your-shared-drive-folder-id
DRIVE_FOLDER_AMBARADAM=your-shared-drive-folder-id
DRIVE_OWNER_MAP={"BOSS":"your-email@domain.com","DEFAULT":"your-email@domain.com"}
DEFAULT_FOLDER_ROOT=AMBARADAM
DEFAULT_FOLDER_LEAF=Notes
CHAT_FOLDER_LEAF=Chats

# GitHub integration
GITHUB_TOKEN=
GITHUB_OWNER=
GITHUB_REPO=

# Email / Gmail
GMAIL_SENDER=

# Chat settings
CHAT_AUDIENCE=public
CHAT_AUTO_SAVE=true
CHAT_AUTO_SAVE_MIN_LENGTH=200
ALLOWED_ISSUERS=
ALLOWED_CLIENT_IDS=
AMBARADAM_MAGIC_WORD=
PLUGIN_CORS_WHITELIST=

# Redis Configuration - OPTIONAL: For caching and performance
# Upstash Redis (recommended for serverless)
REDIS_URL=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
# OR traditional Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

