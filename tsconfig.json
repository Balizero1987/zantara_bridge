{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "tests",
    "src/api/**",
    "src/server.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/test*.ts",
    "src/**/test*.ts",
    "src/**/__tests__/**"
  ]
}
