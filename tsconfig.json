{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "tests",
    "src/api/**",
    "src/server.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/test*.ts",
    "src/**/test*.ts",
    "src/**/__tests__/**"
  ]
}
