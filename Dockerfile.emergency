FROM node:22-slim

WORKDIR /app

# Copy everything
COPY package*.json ./
COPY . .

# Install ALL dependencies (including dev)
RUN npm install

# Try to build, but continue if fails
RUN npm run build || echo "Build failed, using ts-node"

ENV NODE_ENV=production
ENV PORT=8080

EXPOSE 8080

# Use ts-node if build failed
CMD ["npx", "ts-node", "src/server.ts"]